{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "mock-openai-mtls": {
      "npm": "file://{env:PWD}/openai-mtls-provider",
      "name": "Mock OpenAI Server (mTLS)",
      "options": {
        "baseURL": "https://localhost:8000/v1",
        "clientCert": "./certs/client.crt",
        "clientKey": "./certs/client.key",
        "caCert": "./certs/ca.crt",
        "apiKey": "mock-api-key",
        "proxy": "http://localhost:8080",
        "headers": {
          "X-Custom-Header": "test-value-123",
          "X-Request-Source": "opencode-mtls"
        },
        "removeKeys": ["frequency_penalty", "presence_penalty"]
      },
      "models": {
        "gpt-4o": {
          "name": "GPT-4o (Mock mTLS)",
          "attachments": true,
          "limit": {
            "context": 128000,
            "output": 16384
          }
        },
        "gpt-4o-mini": {
          "name": "GPT-4o Mini (Mock mTLS)",
          "attachments": true,
          "limit": {
            "context": 128000,
            "output": 16384
          }
        },
        "gpt-4-turbo": {
          "name": "GPT-4 Turbo (Mock mTLS)",
          "attachments": true,
          "limit": {
            "context": 128000,
            "output": 4096
          }
        },
        "gpt-4": {
          "name": "GPT-4 (Mock mTLS)",
          "limit": {
            "context": 8192,
            "output": 4096
          }
        },
        "gpt-3.5-turbo": {
          "name": "GPT-3.5 Turbo (Mock mTLS)",
          "limit": {
            "context": 16385,
            "output": 4096
          }
        }
      }
    }
  },
  "model": "mock-openai-mtls/gpt-4o"
}
