{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "mock-openai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Mock OpenAI Server",
      "options": {
        "baseURL": "http://localhost:8000/v1"
      },
      "models": {
        "gpt-4o": {
          "name": "GPT-4o (Mock)",
          "attachments": true,
          "limit": {
            "context": 128000,
            "output": 16384
          }
        },
        "gpt-4o-mini": {
          "name": "GPT-4o Mini (Mock)",
          "attachments": true,
          "limit": {
            "context": 128000,
            "output": 16384
          }
        },
        "gpt-4-turbo": {
          "name": "GPT-4 Turbo (Mock)",
          "attachments": true,
          "limit": {
            "context": 128000,
            "output": 4096
          }
        },
        "gpt-4": {
          "name": "GPT-4 (Mock)",
          "limit": {
            "context": 8192,
            "output": 4096
          }
        },
        "gpt-3.5-turbo": {
          "name": "GPT-3.5 Turbo (Mock)",
          "limit": {
            "context": 16385,
            "output": 4096
          }
        }
      }
    }
  },
  "model": "mock-openai/gpt-4o"
}
